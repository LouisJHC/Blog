<div id="post_content">
<h1 class="title">
    <%= @post.title %>
</h1>

<p class="date">
    Created <%= time_ago_in_words(@post.created_at) %> ago
    <% if user_signed_in? %>
        | <%= link_to 'edit', edit_post_path(@post) %>
        | <%= link_to 'delete', post_path(@post), method: :delete, data: {confirm: 'Are you sure who want to delete?'} %>
    <% end %>
</p>

<p class="content">
    <%= @post.body %>
    <div id="comments">
        <h2><%= @post.comments.count %> Comments</h2>
        <%= render @post.comments %>
        
        <h3>Write a comment:</h3>
        <%= render "comments/form" %>
    </div>
</p>
</div>